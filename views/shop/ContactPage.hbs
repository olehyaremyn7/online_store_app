<script>
    function initMap() {
        const position = {lat: 48.932080, lng: 24.695352}
        const opt = {
            center: position, zoom: 15
        }

        const map = new google.maps.Map(document.getElementById('map'), opt);

        const marker = new google.maps.Marker({
            position: position,
            map: map,
            title: "Aligator Store"
        })
    }
</script>
<script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyADhc5iBUKx1HxPGmAVSb_l4DDmE5e7VCc&callback=initMap"
