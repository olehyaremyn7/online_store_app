{{> header }}
<!-- JQuery -->
<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>

<main>
    <div class="breadcrumb-wrapper">
        <div class="breadcrumb-container container">
            <div class="breadcrumb-row row">
                <div class="col-lg-12">
                    <div class="breadcrumb-text">
                        <a href="#"><i class="fa fa-home mr-2"></i> Home</a>
                        <span style="color: black">/</span>
                        <span class="breadcrumb-login">Cart</span>
                    </div>
                </div>
            </div>
        </div>
    </div>

    {{# if products }}
        <section class="shopping-cart-wrapper">
            <div class="shopping-cart-container container">
                <div class="shopping-cart-row">
                    <div class="shopping-cart-table">
                        <table class="cart-table">
                            <thead class="cart-thead">
                            <tr class="cart-tr-thead">
                                <th class="th-product-name">Product</th>
                                <th class="th-product-quantity">Quantity</th>
                                <th class="th-product-price">Price</th>
                            </tr>
                            </thead>
                            {{# each products }}
                                <tbody class="cart-tbody">
                                <tr class="cart-tr-tbody">
                                    <td class="td-product-name">{{ this.item.title }}</td>
                                    <td class="td-product-quantity">{{ this.quantity }}</td>
                                    <td class="td-product-price">{{ this.price }}</td>
                                    <td class="td-product-reduce"><a href="/store/reduce/{{ this.item._id }}"><i class="fas fa-minus reduce-icon"></i></a></td>
                                    <td class="td-product-reduce"><a href="/store/remove/{{ this.item._id }}"><i class="fas fa-times remove-icon"></i></a></td>
                                </tr>
                                </tbody>
                            {{/each}}
                        </table>
                    </div>
                    <div class="cart-btn">
                        <div class="cart-btn-row row">
                            <div class="col-lg-6">
                                <div class="cart-btn-total">
                                    <h3>Total: {{ totalPrice }}$</h3>
                                </div>
                            </div>
                            <div class="col-lg-5 offset-lg-1">
                                <div class="cart-btn-row-bottom">
                                    <div class="cart-btn-checkout">
                                        <a class="cart-btn-checkout-btn" type="button" href="/store/checkout">Checkout</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>

    {{ else }}

        <section class="shopping-cart-empty-wrapper">
            <div class="shopping-cart-empty-container container">
                <div class="shopping-cart-empty-top-text">
                    <h2>No items in cart <i class="fas fa-shopping-cart"></i></h2>
                </div>
                <hr class="shopping-cart-empty-hr">
                <div class="shopping-cart-empty-bottom-text">
                    <h3>Go to the <a href="#">Products</a> page and select the item which you want</h3>
                </div>
            </div>
        </section>

    {{/if}}

</main>

{{> footer}}