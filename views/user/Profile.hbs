{{> header }}
<!-- JQuery -->
<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>

<div class="container ">
    <div class="alert alert-danger {{#if noError}}d-none{{/if}}">
        {{errMsg}}
    </div>
</div>

<div class="row justify-content-center">
    <div class="col-sm-6 mb-3">
        <div id="success" role="alert" class="alert alert-success {{#if noMessages}}d-none{{/if}}">
            {{ successMsg }}
        </div>
    </div>
</div>

<div class="container">
    <div class="row mt-4 justify-content-center">

        <div class="col-md-6 mb-4 text-center text-md-left">
            <h1 class="display-4 font-weight-bold wow fadeInLeft" data-wow-delay="0.3s">User Profile </h1>
            <hr style="border-top: 2px solid;" class="hr-dark wow fadeInLeft" data-wow-delay="0.3s">

            <div class="card">
                <div class="card-body">
                    <h1 style="font-size: 100px;" class="dark-grey-text text-center"><strong>
                        <i class="fas fa-user-circle prefix grey-text"></i>
                    </strong></h1>

                    <hr class="hr-dark">
                    {{# each user }}
                        {{# each this }}
                            <h3 class="dark-grey-text text-center"><strong>{{ this.firstName }}{{ this.lastName }}</strong></h3>
                        {{/each}}
                    {{/each}}
                    <div class="modal fade" id="modalCreateNewProductForm" tabindex="-1" role="dialog" aria-labelledby="myModalLabel"
                         aria-hidden="true">
                        <div class="modal-dialog" role="document">
                            <form action="/store/user/add-user-product" method="post">
                                <div class="modal-content">
                                    <div class="modal-header text-center">
                                        <h4 class="modal-title w-100 font-weight-bold">New User Product</h4>
                                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                            <span aria-hidden="true">&times;</span>
                                        </button>
                                    </div>
                                    <div class="modal-body mx-3">
                                        <div class="md-form mb-5">
                                            <i class="fas fa-file-signature prefix grey-text"></i>
                                            <input type="text" id="title" name="title" class="form-control validate">
                                            <label data-error="wrong" data-success="right" for="form34">Title</label>
                                        </div>

                                        <div class="md-form mb-5">
                                            <i class="fas fa-list-alt prefix grey-text"></i>
                                            <input type="text" id="category" name="category" class="form-control validate">
                                            <label data-error="wrong" data-success="right" for="form34">Categories</label>
                                        </div>

                                        <div class="md-form mb-5">
                                            <i class="fas fa-dollar-sign prefix grey-text"></i>
                                            <input type="text" id="price" name="price" class="form-control validate">
                                            <label data-error="wrong" data-success="right" for="form32">Price</label>
                                        </div>

                                        <div class="md-form mb-5">
                                            <input type="text" name="imagePath" id="imagePath" class="form-control validate">
                                            <label data-error="wrong" data-success="right" for="form32">Image path</label>
                                        </div>

                                        <div class="md-form">
                                            <i class="fas fa-pencil prefix grey-text"></i>
                                            <textarea type="text" id="form8" name="description" class="md-textarea form-control" rows="4"></textarea>
                                            <label data-error="wrong" data-success="right" for="form8">Your description</label>
                                        </div>
                                        <!--
                                        <div class="input-group">
                                            <div class="input-group-prepend">
                                                <span class="input-group-text" id="inputGroupFileAddon01">Upload</span>
                                            </div>
                                            <div class="custom-file">
                                                <input type="file" class="custom-file-input" id="inputGroupFile01"
                                                       aria-describedby="inputGroupFileAddon01">
                                                <label class="custom-file-label" for="inputGroupFile01">Choose photo</label>
                                            </div>
                                        </div> -->

                                    </div>
                                    <div class="modal-footer d-flex justify-content-center">
                                        <button type="submit" class="btn btn-unique">Post your product <i class="fas fa-paper-plane-o ml-1"></i></button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>

                    <div class="text-center">
                        <button type="button" class="btn btn-danger btn-rounded" data-toggle="modal" data-target="#modalCreateNewProductForm">Add your product
                            <a href="#"></a>
                        </button>
                        <button type="button" class="btn btn-indigo btn-rounded">
                            <a href="/store/user/edit">Edit profile</a>
                        </button>
                    </div>

                    <ul class="list-group list-group-flush mt-2">
                        <li class="list-group-item d-flex justify-content-between align-items-center">Active goods: <span class="badge badge-primary badge-pill">2</span></li>
                        <li class="list-group-item d-flex justify-content-between align-items-center">Added goods: <span class="badge badge-primary badge-pill">12</span></li>
                        <li class="list-group-item d-flex justify-content-between align-items-center">Sold goods: <span class="badge badge-primary badge-pill">10</span></li>
                        <li class="list-group-item d-flex justify-content-between align-items-center">Purchased goods: <span class="badge badge-primary badge-pill">5</span></li>
                    </ul>
                </div>
            </div>

        </div>

        <div class="col-md-6 col-xl-5 mb-4">
            <h1 class="display-4 font-weight-bold wow fadeInLeft" data-wow-delay="0.3s">My Orders </h1>
            <hr style="border-top: 2px solid;" class="hr-dark wow fadeInLeft" data-wow-delay="0.3s">
            {{# each orders }}
                <div class="mt-4">
                    <div class="card">
                        <div class="card-body">
                            <h4 class="card-title"><a class="md-left"><strong>You ordered:</strong></a></h4>
                            <hr>

                            <div class="panel panel-default">
                                <div class="panel-body">
                                    <ul class="list-group">
                                        {{# each this.items }}
                                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                                {{ this.item.title }} | {{ this.quantity }} Units
                                                <span class="badge badge-primary badge-pill">{{ this.price }}</span>
                                            </li>
                                        {{/each}}
                                    </ul>
                                </div>
                                <hr>
                                <div class="panel-footer">
                                    <strong>Total Price: ${{ this.cart.totalPrice }}</strong>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            {{/each}}
        </div>

        {{# each userProducts}}
                {{# each this}}
                        {{ this.imagePath }}
                        {{ this.title }}
                        {{ this.category }}
                        {{ this.description }}
                        {{ this.price }}
                    <a href="/store/user/remove-user-product/{{this._id}}" type="button">Delete</a>

                            <form action="/store/user/update-user-product/{{this._id}}" method="post">
                                        <h4 class="modal-title w-100 font-weight-bold">New User Product</h4>
                                            <input type="text" id="title" name="title" class="form-control validate">
                                            <label data-error="wrong" data-success="right" for="form34">Title</label>

                                            <input type="text" id="category" name="category" class="form-control validate">
                                            <label data-error="wrong" data-success="right" for="form34">Categories</label>

                                            <input type="text" id="price" name="price" class="form-control validate">
                                            <label data-error="wrong" data-success="right" for="form32">Price</label>

                                            <input type="text" name="imagePath" id="imagePath" class="form-control validate">
                                            <label data-error="wrong" data-success="right" for="form32">Image path</label>

                                            <textarea type="text" id="form8" name="description" class="md-textarea form-control" rows="4"></textarea>
                                            <label data-error="wrong" data-success="right" for="form8">Your description</label>

                                        <button type="submit" class="btn btn-unique">Edit your product <i class="fas fa-paper-plane-o ml-1"></i></button>
                            </form>
                {{/each}}
        {{/each}}

    </div>
</div>