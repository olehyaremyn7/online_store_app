<h1>Payment</h1>
<h3>Your Total: {{ total }} $</h3>
<form action="/store/checkout/payment" method="post" id="checkout-form">
    <input type="text" id="name" required name="name">
    <label for="name">Name</label>

    <input type="text" id="address" required name="address">
    <label for="address">Address</label>

    <input type="text" id="card-name" required>
    <label for="card-name">Card Holder Name</label>

    <input type="text" id="card-number" required>
    <label for="card-number">Credit Card Number</label>

    <input type="text" id="card-expiry-month" required>
    <label for="card-expiry-month">Expiration Month</label>

    <input type="text" id="card-expiry-year" required>
    <label for="card-expiry-year">Expiration Year</label>

    <input type="text" id="card-cvc" required>
    <label for="card-cvc">Card CVC</label>

    <button type="submit">Buy now</button>
</form>